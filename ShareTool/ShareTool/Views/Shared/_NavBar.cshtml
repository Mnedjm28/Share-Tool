<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
    <div class="container">
        @Html.ActionLink(Resources.ShareToolResource.ShareTool, "Index", "SharedTool", new { area = "" }, new { @class = "navbar-brand" })
