@model IEnumerable<ShareTool.Models.SharedTool>

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        img {
            width: 350px;
            height: 200px;
            object-fit: contain;
            object-position: center;
        }
    </style>
</head>
<body>
    @ViewBag.UserName

    @ViewData["FirstName"]
    <h2>@DateTime.Now.ToShortTimeString()</h2>
    @{
        var title = "أدوات متوفرة للمشاركة :";
        <h3>@title @Model.Count()</h3>
        @title @title
        <text> هنا تجد الكثير من الأدوات التي تحتاجها بشكل يومي </text>
    }

    <p>
        @Html.ActionLink(Resources.ShareToolResource.CreateNew, "Create")
    </p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 text-center">
                <div class="col-md-12">
                    <img src="@item.ImagePath" />
                </div>
                <p>@Html.DisplayFor(modelItem => item.Name)</p>

                <p>@Html.DisplayFor(modelItem => item.Description)</p>

                <p>@Html.DisplayFor(modelItem => item.Quantity)</p>

                <p>
                    @Html.ActionLink(Resources.ShareToolResource.Edit, "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink(Resources.ShareToolResource.Details, "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink(Resources.ShareToolResource.Delete, "Delete", new { /* id=item.PrimaryKey */ }) |
                    @if (item.Quantity != 0)
                    {
                        @Html.ActionLink(Resources.ShareToolResource.Request, "RequestTool", new { /* id=item.PrimaryKey */ })
                    }
                </p>
            </div>
        }
    </div>
</body>
</html>
